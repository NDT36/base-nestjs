{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "$app/*": ["app/*"],
      "$shared*": ["app/shared/*"],
      "$admin*": ["app/admin/*"],
      "$client*": ["app/client/*"],
      "$core/*": ["core/*"],
      "$database/*": ["database/*"],
      "$helpers/*": ["helpers/*"],
      "$types/*": ["types/*"],
      "$config": ["config"]
    }
  }
}
