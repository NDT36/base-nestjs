{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "rootTypes": ["./src/types"],
    "paths": {
      "$entities/*": ["app/database/entities/*"],
      "$migrations/*": ["database/migrations/*"],
      "$subscribers/*": ["database/subscribers/*"],
      "$middlewares/*": ["middlewares/*"],
      "$app/*": ["app/*"],
      "$validators/*": ["validators/*"],
      "$helpers/*": ["helpers/*"],
      "$types/*": ["types/*"],
      "$config": ["config"],
      "$enums/*": ["app/enums/*"],
      "$modules/*": ["app/modules/*"]
    }
  }
}
