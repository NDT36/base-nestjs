{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "types": ["node", "jest", "express"],
    "paths": {
      "$database/*": ["database/*"],
      "$middlewares/*": ["middlewares/*"],
      "$app/*": ["app/*"],
      "$shared*": ["app/shared/*"],
      "$admin*": ["app/admin/*"],
      "$client*": ["app/client/*"],
      "$decorators/*": ["decorators/*"],
      "$helpers/*": ["helpers/*"],
      "$types/*": ["types/*"],
      "$config": ["config"],
      "$enums/*": ["app/enums/*"],
      "$modules/*": ["app/modules/*"]
    }
  }
}
